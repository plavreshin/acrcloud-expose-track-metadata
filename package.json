{
  "name": "tracks-search-graphql-task",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./src/app.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "all:dev": "npm run format && npm run lint --fix && npm run type-check",
    "generate": "graphql-codegen --config codegen.yml",
    "build": "npm run generate && tsc -p .",
    "start:dev": "nodemon -r dotenv/config src/server.ts",
    "start:dev:all": "concurrently  --names \"CodeGen,Nodemon\" -c \"bgYellow,bgMagenta\" \"graphql-codegen --watch 'src/**/*.ts'\"  \"nodemon -r dotenv/config src/server.ts \"",
    "start:prod": "node dist/app",
    "test": "jest --watchAll",
    "test:ci": "jest --ci"
  },
  "dependencies": {
    "@adobe/node-fetch-retry": "^2.2.0",
    "@apollo/server": "^4.9.5",
    "body-parser": "^1.20.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "express": "~4.18.2",
    "fp-ts": "^2.16.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "helmet": "^7.1.0",
    "http-errors": "~1.6.3",
    "http-graceful-shutdown": "^3.1.13",
    "jsonwebtoken": "^9.0.2",
    "logform": "^2.6.0",
    "morgan": "~1.9.1",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7-rc.0",
    "ts-node": "^10.9.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@parcel/watcher": "^2.3.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-formatjs": "^4.11.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow-functions": "^3.2.4",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
